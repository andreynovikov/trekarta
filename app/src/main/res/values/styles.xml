<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.App.Base">
    </style>

    <style name="Theme.App.Starting" parent="Theme.App.Starting.Base">
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorBackground</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/isNotNightMode</item>
        <item name="android:navigationBarColor">@color/colorNavigationBackground</item>
        <item name="dragHandleColor">@color/dragHandle</item>
        <item name="informationIconColor">@color/informationIconColor</item>
        <item name="actionIconColor">@color/actionIconColor</item>
        <item name="zoomIconColor">@color/zoomIconColor</item>
        <item name="snackbarStyle">@style/AppSnackbar</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="Theme.App.Starting.Base" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorSplashBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_animated</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <style name="AppPreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="AppSnackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="DialogContent">
        <item name="android:layout_marginStart">@dimen/dialogContentMargin</item>
        <item name="android:layout_marginEnd">@dimen/dialogContentMargin</item>
        <item name="android:layout_marginBottom">@dimen/dialogContentMargin</item>
        <item name="android:layout_marginTop">@dimen/dialogTitleMargin</item>
    </style>

    <style name="DialogButton" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:layout_marginStart">@dimen/dialogButtonMargin</item>
        <item name="android:layout_marginEnd">@dimen/dialogButtonMargin</item>
        <item name="android:paddingStart">@dimen/dialogButtonMargin</item>
        <item name="android:paddingEnd">@dimen/dialogButtonMargin</item>
    </style>

    <style name="SubHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Scrollbar">
        <item name="android:verticalScrollbarPosition">defaultPosition</item>
    </style>

    <style name="FloatingActionButton">
        <item name="layout_anchorGravity">top|end</item>
    </style>

    <style name="ListFloatingActionButton">
        <item name="layout_anchorGravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/list_fab_margin</item>
    </style>

    <style name="PanelHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ActionPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ContentPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="BottomSheet">
    </style>

    <style name="ExtendPanel">
        <item name="android:layout_above">@id/actionPanel</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_above">@id/actionPanel</item>
        <item name="android:layout_marginBottom">-6dp</item>
    </style>

    <style name="MainConstraint">
    </style>

    <style name="MapButtonHolder">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MapZoomHolder">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Scrollbar">
        <item name="android:verticalScrollbarPosition">left</item>
    </style>

    <style name="FloatingActionButton">
        <item name="layout_anchorGravity">top|start</item>
    </style>

    <style name="ListFloatingActionButton">
        <item name="layout_anchorGravity">bottom|end</item>
        <item name="android:layout_marginBottom">@dimen/list_fab_margin</item>
    </style>

    <style name="PanelHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="ActionPanel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ContentPanel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="BottomSheet">
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="ExtendPanel">
        <item name="android:layout_toStartOf">@id/actionPanel</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">-6dp</item>
    </style>

    <style name="MainConstraint">
        <item name="android:layout_marginEnd">@dimen/image_button_size</item>
    </style>

    <style name="MapButtonHolder">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintVertical_bias">1.0</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MapZoomHolder">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
